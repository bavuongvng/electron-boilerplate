{
  "name": "queenbee",
  "version": "0.1.0",
  "main": "build/electron.js",
  "homepage": "./",
  "private": true,
  "author": {
    "name": "MTTJSC SOFTWARE",
    "email": "info@mttjsc.com",
    "url": "https://www.mttjsc.com/"
  },
  "description": "App for nailshop owner",
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "electron-is-dev": "^1.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "typescript": "~3.7.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "dev": "nf start",
    "start-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "electron-builder",
    "preelectron-pack": "rm -rf build release && yarn build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "electron": "^13.6.6",
    "electron-builder": "^22.7.0",
    "electron-devtools-installer": "^3.1.0",
    "foreman": "^3.0.1",
    "grunt": "^1.2.1",
    "wait-on": "^5.0.3"
  },
  "build": {
    "appId": "com.mttjsc.nailsshop.owner",
    "artifactName": "${productName}-${version}.${ext}",
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "resources/**/*"
    ],
    "mac": {
      "bundleVersion": "2",
      "category": "public.app-category.lifestyle",
      "target": [
        {
          "target": "dmg"
        },
        {
          "target": "pkg"
        }
      ],
      "icon": "resources/icon.icns"
    }
  }
}
